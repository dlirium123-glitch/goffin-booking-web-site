rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------
    // Helpers (auth)
    // ----------------------------
    function isSignedIn() { return request.auth != null; }
    function uid() { return request.auth.uid; }

    // ✅ Admin = custom claim ONLY (via Admin SDK / GitHub Action)
    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    // ----------------------------
    // Helpers (validation)
    // ----------------------------
    // slotId format: YYYYMMDD_HHMM (ex: 20260225_1100)
    function isValidSlotId(slotId) {
      return slotId is string && slotId.matches('^[0-9]{8}_[0-9]{4}$');
    }

    function isValidRequestId(rid) {
      return rid is string && rid.size() >= 10 && rid.size() <= 80;
    }

    // 48h rule (client cannot book < 48h)
    function isAtLeast48hInFuture(ts) {
      return ts is timestamp && ts >= request.time + duration.value(48, 'h');
    }

    // Guard: publicSlots must exist and be free
    function publicSlotIsFree(slotId) {
      return exists(/databases/$(database)/documents/publicSlots/$(slotId))
        && get(/databases/$(database)/documents/publicSlots/$(slotId)).data.status == "free";
    }

    // deny if doc already exists
    function doesNotExist(path) {
      return !exists(path);
    }

    // ----------------------------
    // Allowlists (keys)
    // ----------------------------
    function userKeysAllowed() {
      return request.resource.data.keys().hasOnly([
        "email", "company", "vat", "phone", "hqAddress",
        "createdAt", "updatedAt"
      ]);
    }

    function holdKeysAllowed() {
      return request.resource.data.keys().hasOnly([
        "uid", "start", "end", "expiresAt", "status",
        "createdAt", "updatedAt"
      ]);
    }

    function bookingKeysAllowed() {
      return request.resource.data.keys().hasOnly([
        "slotId", "uid", "status", "start", "end", "requestId",
        "createdAt", "updatedAt"
      ]);
    }

    function requestKeysAllowed() {
      return request.resource.data.keys().hasOnly([
        "requestId", "uid", "status", "start", "end",
        "slotIds", "totalSlots", "durationMinutes",
        "createdAt", "updatedAt"
      ]);
    }

    // Helper: hold must exist for this slot and belong to user, not expired
    function hasValidHold(slotId, startTs, endTs) {
      return exists(/databases/$(database)/documents/holds/$(slotId))
        && get(/databases/$(database)/documents/holds/$(slotId)).data.uid == uid()
        && get(/databases/$(database)/documents/holds/$(slotId)).data.status == "hold"
        && get(/databases/$(database)/documents/holds/$(slotId)).data.expiresAt > request.time
        && get(/databases/$(database)/documents/holds/$(slotId)).data.start == startTs
        && get(/databases/$(database)/documents/holds/$(slotId)).data.end == endTs;
    }

    // ----------------------------
    // users (CANONIQUE) doc id = uid
    // ----------------------------
    match /users/{userId} {
      // client can read own profile (get only)
      allow get: if isSignedIn() && userId == uid();
      allow list: if false;

      // admin can read all
      allow read: if isAdmin();

      // client can create/update own profile
      allow create, update: if isSignedIn()
        && userId == uid()
        && userKeysAllowed()
        && request.resource.data.email is string
        && request.resource.data.company is string
        && request.resource.data.vat is string
        && request.resource.data.phone is string
        && request.resource.data.hqAddress is string;

      allow delete: if isAdmin();
    }

    // ----------------------------
    // publicSlots (PUBLIC calendar mirror) (readonly from client)
    // ----------------------------
    match /publicSlots/{slotId} {
      allow read: if true;
      allow create, update, delete: if false; // written by Admin SDK only
    }

    // ----------------------------
    // freeSlots (INTERNAL / admin)
    // ----------------------------
    match /freeSlots/{slotId} {
      allow read, create, update, delete: if isAdmin();
    }

    // ----------------------------
    // holds (temporary lock) doc id = slotId
    // ----------------------------
    match /holds/{slotId} {
      // public read ok (needed for transaction checks + UI if you want)
      allow read: if true;

      allow create: if isSignedIn()
        && isValidSlotId(slotId)
        && holdKeysAllowed()
        && doesNotExist(/databases/$(database)/documents/holds/$(slotId))
        && publicSlotIsFree(slotId)
        && request.resource.data.uid == uid()
        && request.resource.data.start is timestamp
        && request.resource.data.end is timestamp
        && request.resource.data.expiresAt is timestamp
        && request.resource.data.expiresAt > request.time
        && request.resource.data.expiresAt <= request.time + duration.value(30, 'm')
        && isAtLeast48hInFuture(request.resource.data.start)
        && request.resource.data.status == "hold";

      allow update: if false;

      // user can delete own hold (or admin)
      allow delete: if isAdmin() || (isSignedIn() && resource.data.uid == uid());
    }

    // ----------------------------
    // bookings (slot-level docs) doc id = slotId
    // ----------------------------
    match /bookings/{bookingId} {
      allow read: if isAdmin()
        || (isSignedIn() && resource.data.uid == uid());

      allow create: if isSignedIn()
        && isValidSlotId(bookingId)
        && bookingKeysAllowed()
        && doesNotExist(/databases/$(database)/documents/bookings/$(bookingId))
        && request.resource.data.slotId is string
        && request.resource.data.slotId == bookingId
        && request.resource.data.uid == uid()
        && request.resource.data.status == "pending"
        && request.resource.data.start is timestamp
        && request.resource.data.end is timestamp
        && isAtLeast48hInFuture(request.resource.data.start)
        && publicSlotIsFree(bookingId)
        && hasValidHold(bookingId, request.resource.data.start, request.resource.data.end);

      allow update, delete: if isAdmin();
    }

    // ----------------------------
    // requests (source de vérité)
    // ----------------------------
    match /requests/{requestId} {
      allow read: if isAdmin()
        || (isSignedIn() && resource.data.uid == uid());

      allow create: if isSignedIn()
        && isValidRequestId(requestId)
        && requestKeysAllowed()
        && doesNotExist(/databases/$(database)/documents/requests/$(requestId))
        && request.resource.data.requestId == requestId
        && request.resource.data.uid == uid()
        && request.resource.data.status == "pending"
        && request.resource.data.start is timestamp
        && request.resource.data.end is timestamp
        && isAtLeast48hInFuture(request.resource.data.start)
        && request.resource.data.slotIds is list
        && request.resource.data.totalSlots is int
        && request.resource.data.durationMinutes is int
        // single-slot request (v3)
        && request.resource.data.totalSlots == 1
        && request.resource.data.slotIds.size() == 1
        && isValidSlotId(request.resource.data.slotIds[0])
        && publicSlotIsFree(request.resource.data.slotIds[0])
        && hasValidHold(request.resource.data.slotIds[0], request.resource.data.start, request.resource.data.end);

      allow update, delete: if isAdmin();
    }

    // ----------------------------
    // legacy (optionnel)
    // ----------------------------
    match /appointments/{docId} {
      allow read: if isAdmin() || (isSignedIn() && resource.data.uid == uid());
      allow create: if isSignedIn()
        && request.resource.data.uid == uid()
        && request.resource.data.status == "pending"
        && request.resource.data.start is timestamp
        && request.resource.data.end is timestamp
        && isAtLeast48hInFuture(request.resource.data.start);
      allow update, delete: if isAdmin();
    }

    match /modificationRequests/{docId} {
      allow read: if isAdmin() || (isSignedIn() && resource.data.uid == uid());
      allow create: if isSignedIn()
        && request.resource.data.uid == uid()
        && request.resource.data.createdAt is timestamp
        && request.resource.data.status is string;
      allow update, delete: if isAdmin();
    }

    // internal admin collections
    match /slots/{docId} { allow read, write: if isAdmin(); }
    match /syncHealth/{docId} { allow read, write: if isAdmin(); }
    match /settings/{docId} { allow read, write: if isAdmin(); }

    // fallback: deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}